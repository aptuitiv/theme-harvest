{%  include 'snippets/header' %}
<div class="Container">
    {% if _page.isHome == false %}
        {{ _page.breadcrumb }}
    {% endif %}
    <div class="Content u-cf">
        {{ _page.content('header') }}
        <div class="Grid Grid--withGutterXlg">
            <div class="Grid-cell u-size3of4 u-lg-size2of3 u-md-sizeFull">
                {{ _page.content() }}
            </div>
            <div class="Grid-cell u-size1of4 u-lg-size1of3 u-md-sizeFull">
                {{ _api.navigation.getSubNavigationByUrl.key('main').getParentItem('yes').showSubNav('yes').template('sidebar') }}
            </div>
        </div>
    </div>
</div>
{%  include 'snippets/footer' %}
